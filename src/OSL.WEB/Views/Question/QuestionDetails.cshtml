@using OSL.BLL.Models
@using OSL.WEB.Extensions
@model QuestionAnswerVM

<div class="container mt-5">
    <div class="q-list-container">
        <div class="d-flex justify-content-between">
            <p><strong>@(Model.Question.User?.Email ?? "Delete User")</strong></p>
            <p>@($"{Model.Question.CreatedAt.ToString("MMM dd, yyyy | hh:mm tt")} ({Model.Question.CreatedAt.TimeAgo()})")</p>
        </div>

        <div class="form-group row">
            <p>@Model.Question.Explanation</p>
        </div>

        <div class="d-flex justify-content-between">
            <div class="d-flex gap-2 topic">
                @foreach (var topic in Model.Question.Topic.SplitAndTrim())
                {
                    <p>@topic</p>
                }
            </div>
        </div>
        <hr />

        @{
            void RenderAnswers(List<AnswerVM> answers)
            {
                foreach (var answer in answers)
                {
                    <div id="question" class="rounded border p-3 mb-3">
                        <div>
                            <div class="d-flex justify-content-between">
                                <p><strong>@(answer.User?.Email ?? "Delete User")</strong> on @($"{answer.CreatedAt.ToString("MMM dd, yyyy")} ({answer.CreatedAt.TimeAgo()})")</p>
                                <p><span id="replyButton" class="reply-button link-text" onclick="appendInput()">Reply</span></p>
                            </div>
                            <div class="form-group row mb-2">
                                <p>@answer.Explanation</p>
                            </div>
                        </div>

                        @if (answer.Answers != null)
                        {
                            RenderAnswers(answer.Answers);
                        }
                    </div>
                }
            }

            RenderAnswers(Model.AnswerVMs);
        }


        <div id="answer-input" class="col-sm-9 w-100">
            <form id="answer-form">
                <textarea id="reply-text" class="form-control mb-2" style="height: 90px" placeholder="Write your answer here" name="replyText"></textarea>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Post Answer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    function appendInput() {
        if (!$("#reply-input").length) {
            $("#question").append(`
                <div id="reply-input">
                        <form id="reply-form" class="col-sm-9 w-100 d-flex">
                        <textarea id="reply-text" class="form-control mb-2" style="height: 90px" placeholder="Write your reply here" name="replyText"></textarea>
                        <div class="text-center">
                            <button type="button" class="btn btn-danger w-75 mb-2 mt-1" onclick="closeReplyInput()">Close</button>
                            <button type="submit" class="btn btn-primary w-75">Post</button>
                        </div>
                    </form>
                </div>`);
        }
        else {
            closeReplyInput();
        };
    }

    function closeReplyInput() {
        $("#reply-input").remove();
    }

    $(document).ready(function () {
        $("#replyButton").click(function () {

            $("#reply-form").validate({
                rules: {
                    replyText: {
                        required: true,
                        minlength: 10
                    }
                },
                messages: {
                    replyText: {
                        required: "Please enter your reply",
                        minlength: "Your reply must be at least 10 characters long"
                    }
                },
                submitHandler: function (form) {
                    postReply();
                }
            });
        });
    });

    function postReply() {
        var replyText = $("#reply-text").val();

        $.ajax({
            url: "/answer",
            type: "POST",
            data: { replyText: replyText },
            success: function (response) {
                console.log("Reply posted successfully:", response);
                closeReplyInput();
            },
            error: function (error) {
                console.error("Error posting reply:", error);
            }
        });
    }


</script>